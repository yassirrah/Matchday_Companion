# Profile
SPRING_PROFILES_ACTIVE=dev

# API
API_PORT=8080

# DB container
POSTGRES_DB=matchday
POSTGRES_USER=matchday
POSTGRES_PASSWORD=matchday
DB_PORT=5432

# Spring datasource (api -> db service hostname is "db")
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/matchday
SPRING_DATASOURCE_USERNAME=matchday
SPRING_DATASOURCE_PASSWORD=matchday

# Flyway / Hibernate
SPRING_FLYWAY_ENABLED=true
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# CORS
APP_CORS_ALLOWED_ORIGINS=http://localhost:5173

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# Actuator in prod (optional if you implement separate port/address)
MANAGEMENT_PORT=8081
MANAGEMENT_ADDRESS=127.0.0.1
